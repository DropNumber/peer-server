=== Login ===
Uses jquery, bootstrap. 

login.html
<html>
    <head>
        <script src="jquery.min.js"></script>
        <title>Login</title>
        <link href="bootstrap.min.css" rel="stylesheet">
        <script src="bootstrap.min.js"></script>
        <script src ="login.js"></script>
    </head>
    <body>
     <div class="container">
    <div class="hero-unit"><h1>Login!</h1></div>
    <div class="row">
      <form name="login" action="login" method="post">
        <input name="username" placeholder="Name?" />
        <input name="password" placeholder="Password?" />
        <input type="submit" value="Submit">
      </form>
    </div>
    </body>
</html>


/makeaccount
salt = cryptoRandom(8);
hashed = hash(params.password + "" + salt); 
database.insert({"type": "account", "username": params.username, "password": hashed, "salt": salt})


/login
var found = database({"type": "account", "username": params.username}).first()
if(!found) {
    return "Not in database."
}
console.log("FOUND: ")
console.log(found);
console.log(hash(params.password + "" + found.salt))
if(found.password == "" + hash(params.password + "" + found.salt)) {
    session.loggedIn = true
    return "<h3>It worked! Logged in as " + params.username + "</h3>"
} else {
    return "It broke."
}
